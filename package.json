{
  "license": "UNLICENSED",
  "scripts": {
    "clear": "rm -rf dist",
    "tsc": "tsc",
    "start": "yarn build:local && node --inspect ./dist/server.js",
    "start:prd": "yarn build:prd && node ./dist/server.js",
    "start:server-debug": "nodemon --inspect ./dist/server.js",
    "start:client-only": "webpack-dev-server --config ./build-conf/webpack.config.js --env.target=client-only --profile --colors",
    "build:local": "yarn clear && yarn build:client:local && yarn build:server:local",
    "build:server:local": "webpack --config ./build-conf/webpack.config.js --env.target=ssr-server --progress --profile --colors",
    "build:client:local": "webpack --config ./build-conf/webpack.config.js --env.target=ssr-client --progress --profile --colors",
    "build:server:local:watch": "yarn clear && yarn build:client:local && webpack --watch --config ./build-conf/webpack.config.js --env.target=ssr-server --progress --profile --colors",
    "build:prd": "yarn clear && yarn build:client && yarn build:server",
    "build:server": "webpack --config ./build-conf/webpack.config.js --env.target=ssr-server --env.NODE_ENV=production --progress --profile --colors",
    "build:client": "webpack --config ./build-conf/webpack.config.js --env.target=ssr-client --env.NODE_ENV=production --progress --profile --colors",
    "build:single-lib": "rm -rf dist/umd && webpack --config ./build-conf/webpack.config.single-lib.js --progress --profile --colors"
  },
  "resolutions": {
    "react-helmet/react-side-effect": "2.1.0"
  },
  "dependencies": {
    "@loadable/component": "^5.11.0",
    "@loadable/server": "^5.11.0",
    "core-js": "^3.6.0",
    "express": "^4.17.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-helmet": "^5.2.1",
    "react-router-dom": "^5.1.2",
    "regenerator-runtime": "^0.13.3",
    "typescript": "^3.7.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-react": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@loadable/babel-plugin": "^5.11.0",
    "@loadable/webpack-plugin": "^5.7.1",
    "@types/express": "^4.17.2",
    "@types/loadable__component": "^5.10.0",
    "@types/loadable__server": "^5.9.1",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "@types/react-helmet": "^5.0.14",
    "@types/react-router-dom": "^5.1.3",
    "@types/webpack-dev-middleware": "^2.0.3",
    "@types/webpack-env": "^1.14.1",
    "@types/webpack-hot-middleware": "^2.25.0",
    "babel-loader": "^8.0.6",
    "html-webpack-plugin": "^3.2.0",
    "nodemon": "^2.0.2",
    "open": "^7.0.0",
    "prettier": "1.19.1",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "typescript-tslint-plugin": "^0.5.5",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-dev-server": "^3.9.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2"
  }
}
